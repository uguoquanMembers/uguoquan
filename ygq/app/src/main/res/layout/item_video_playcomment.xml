<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ima_videoplay_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/login_no" />

        <TextView
            android:id="@+id/tv_videoplay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ima_videoplay_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/color_666666" />

        <TextView
            android:id="@+id/tv_videoplay_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ima_videoplay_head"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ima_videoplay_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="content"
            android:textColor="@color/color_333333" />
    </RelativeLayout>
</LinearLayout>
